{
  "name": "dhoppe-vim",
  "version": "1.1.0",
  "author": "Dennis Hoppe",
  "summary": "This module installs and configures the Vim package.",
  "license": "Apache 2.0",
  "source": "git://github.com/dhoppe/puppet-vim.git",
  "project_page": "https://github.com/dhoppe/puppet-vim",
  "issues_url": "https://github.com/dhoppe/puppet-vim/issues",
  "dependencies": [
    {
      "name": "puppetlabs/stdlib",
      "version_requirement": ">= 3.2.0 < 5.0.0"
    }
  ],
  "operatingsystem_support": [
    {
      "operatingsystem": "Debian",
      "operatingsystemrelease": [
        "6",
        "7",
        "8"
      ]
    },
    {
      "operatingsystem": "Ubuntu",
      "operatingsystemrelease": [
        "12.04",
        "14.04"
      ]
    }
  ],
  "requirements": [
    {
      "name": "puppet",
      "version_requirement": "3.x"
    }
  ],
  "tags": [
    "vim",
    "debian",
    "ubuntu"
  ]
}
